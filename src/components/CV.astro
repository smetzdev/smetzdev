---
import Workplace from "./Workplace.astro";
import pocketRocketLogo from "../assets/pocket-rocket.jpeg";
import browsaarLogo from "../assets/browsaar.svg";
import raum3Logo from "../assets/r3.svg";
import azuryLogo from "../assets/azury.svg";
import gorillaLogo from "../assets/gorilla.svg";
import hololuxLogo from "../assets/hlx.svg";
import SectionHeadline from "./SectionHeadline.astro";
import Paragraph from "./Card/Paragraph.astro";
---

<section>
  <SectionHeadline>Work Places</SectionHeadline>
  <Paragraph>
    These are the stations where my career took me so far.
  </Paragraph>
  <ul
    class="bg-gray-800 flex flex-col rounded-md mt-8 divide-y divide-gray-700 px-4 sm:px-8"
  >
    <Workplace
      company="Pocket Rocket"
      companyLink="https://pocket-rocket.io/"
      logo={pocketRocketLogo}
      job="Senior Full Stack Developer"
      yearsActive="2024 - today"
    />
    <Workplace
      company="Browsaar"
      companyLink="https://browsaar.de"
      logo={browsaarLogo}
      job="CEO, CTO & Founder ðŸ˜Ž"
      yearsActive="2023 - today"
    />
    <Workplace
      company="Gorilla"
      companyLink="https://gorilla.build/"
      logo={gorillaLogo}
      job="Software Engineer"
      yearsActive="2021 - 2024"
    />
    <Workplace
      company="Holoux"
      companyLink="https://hololux.de/"
      logo={hololuxLogo}
      job="Full Stack Developer"
      yearsActive="2023 - 2024"
    />
    <Workplace
      company="Azury Living"
      companyLink="https://azury.de/"
      logo={azuryLogo}
      job="Full Stack Developer"
      yearsActive="2020 - 2023"
    />
    <Workplace
      company="raum3"
      companyLink="https://raum3.de"
      logo={raum3Logo}
      job="Web Developer"
      yearsActive="2015 - 2020"
    />
  </ul>
</section>
