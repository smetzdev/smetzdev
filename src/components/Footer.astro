---
import BottomSvg from "./BootmSvg.astro";
const currentYear = new Date().getFullYear();
---

<footer class="pt-32 bg-linear-to-t from-75% from-brawn-black to-transparent">
  <BottomSvg class="-mb-px" />
  <div class="bg-brawn-yellow text-brawn-black">
    <div class="max-w-4xl mx-auto p-8 text-center">
      &copy; {currentYear} Sascha Metz | Made with
      <a
        href="https://astro.build"
        class="text-brawn-red hover:underline"
        target="_blank"
      >
        Astro
      </a> |
      <a class="text-brawn-red hover:underline" href="/impressum">Imprint</a>
    </div>
  </div>
</footer>
